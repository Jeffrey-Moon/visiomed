package Model;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.text.SimpleDateFormat;
import java.util.Date;

public class handiDAO {
	// �������� ����
	PreparedStatement psmt = null;
	Connection conn = null;
	ResultSet rs = null;
	int cnt = 0;
	String sql = null;
	handiDTO hdto = null;

	// DB ���� �޼ҵ�
	public void dbConn() {
		try {
			// 1. DB����(ojdbc6.jar �־��ֱ�)
			// 1-1. Classã�� : DB�� ��Ŭ������ �������ִ� Class
			Class.forName("oracle.jdbc.driver.OracleDriver");

			// 1-2. DB�� �����ϱ� ���� �ּ�, ���̵�, �н����� ����
			String url = "jdbc:oracle:thin:@project-db-stu.ddns.net:1524:xe";
			String db_id = "campus_b_0310_1";
			String db_pw = "smhrd1";

			// 1-3. Connection ��ü ����ؼ� DB����!
			conn = DriverManager.getConnection(url, db_id, db_pw);

		} catch (Exception e) {
			e.printStackTrace();
		}
	}

	// DB close �޼ҵ�
	public void dbClose() {
		try {
			if (rs != null)
				rs.close();
			if (psmt != null)
				psmt.close();
			if (conn != null)
				conn.close();
		} catch (Exception e) {
			e.printStackTrace();
		}
	}
	
	public int regiHandi(handiDTO hdto) {
		dbConn();
		
		try {
			sql = "insert into t_handicaped values(T_HANDICAPED_SEQ.NEXTVAL, ?, ?, ?, ?, ?, ?, ?)";
			psmt = conn.prepareStatement(sql);
			
			SimpleDateFormat formatter = new SimpleDateFormat("yyyy-MM-dd"); 
	        Date date = formatter.parse(hdto.getH_birthdate());
			java.sql.Date sqlDate = new java.sql.Date(date.getTime());
			
			psmt.setString(1, hdto.getH_name());
			psmt.setString(2, hdto.getH_relationship());
			psmt.setDate(3, sqlDate);
			psmt.setString(4, hdto.getH_addr());
			psmt.setString(5, hdto.getH_gender());
			psmt.setString(6, hdto.getH_phone());
			psmt.setString(7, hdto.getUser_id());
			
			cnt = psmt.executeUpdate();
			
			try {
			    cnt = psmt.executeUpdate();
			    if (cnt > 0) {
			        System.out.println("Insert successful. Rows affected: " + cnt);
			    } else {
			        System.out.println("Insert failed. No rows affected.");
			    }
			} catch (SQLException e) {
			    e.printStackTrace();
			    System.out.println("Error: " + e.getMessage());
			}
			
		} catch (Exception e) {
			e.printStackTrace();
		} finally {
			dbClose();
		} return cnt;
	}
	
	public int deleteHandi(int seq) {
	    dbConn();
	    int cnt = 0;
	    PreparedStatement psmtDeleteChild = null;
	    PreparedStatement psmtDeleteParent = null;

	    try {
	        String sqlDeleteChild = "DELETE FROM t_medicine WHERE h_seq IN (SELECT h_seq FROM t_handicaped WHERE h_seq = ?)";
	        psmtDeleteChild = conn.prepareStatement(sqlDeleteChild);
	        psmtDeleteChild.setInt(1, seq);
	        psmtDeleteChild.executeUpdate();

	        String sqlDeleteParent = "DELETE FROM t_handicaped WHERE h_seq = ?";
	        psmtDeleteParent = conn.prepareStatement(sqlDeleteParent);
	        psmtDeleteParent.setInt(1, seq);
	        cnt = psmtDeleteParent.executeUpdate();

	        if (cnt > 0) {
	            System.out.println("Delete successful. Rows affected: " + cnt);
	        } else {
	            System.out.println("Delete failed. No rows affected.");
	        }
	    } catch (SQLException e) {
	        e.printStackTrace();
	        System.out.println("Error: " + e.getMessage());
	    } finally {
	        try {
	            if (psmtDeleteChild != null) psmtDeleteChild.close();
	            if (psmtDeleteParent != null) psmtDeleteParent.close();
	        } catch (SQLException e) {
	            e.printStackTrace();
	        }
	        dbClose();
	    }
	    return cnt;
	}
}
